<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <!-- Servlet Definition -->
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.opp.project.servlets.RegistrationServlet</servlet-class> <!-- Full path to your servlet -->
  </servlet>

  <!-- Servlet Mapping -->
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/RegistrationServlet</url-pattern> <!-- This URL should match the form action -->
  </servlet-mapping>

</web-app>
